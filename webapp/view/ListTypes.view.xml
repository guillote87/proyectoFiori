<mvc:View controllerName="lists.controller.ListTypes" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" displayBlock="true" xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <Page id="page" title="{i18n>title}">
                <content>
                    <IconTabBar id="iconTabBar">
                        <items>
                            <IconTabFilter id="objectList" text="{i18n>objectList}">
                                <List
                                    items="{
                                    path: '/Products',
                                    filters:[{
                                        path: 'Brand',
                                        operator:'EQ',
                                        value1: 'Compaq'
                                    }]                                  
                                    }"
                                >
                                    <items>
                                        <ObjectListItem title="{Material} {Brand} {Model}" number="{Price}" numberUnit="{Currency}" type="Detail">
                                            <ObjectAttribute text="{Brand}" />
                                            <ObjectAttribute text="{Weight}" />
                                        </ObjectListItem>
                                    </items>
                                </List>
                            </IconTabFilter>
                            <IconTabFilter  text="{i18n>standardList}">
                                <Select selectedKey="{/typeSelection}">
                                    <items>
                                        <core:Item key="None" text="{i18n>None}" />
                                        <core:Item key="MultiSelect" text="{i18n>MultiSelect}" />
                                        <core:Item key="SingleSelect" text="{i18n>SingleSelect}" />
                                        <core:Item key="SingleSelectLeft" text="{i18n>SingleSelectLeft}" />
                                         <core:Item key="SingleSelectMaster" text="{i18n>SingleSelectMaster}" />
                                    </items>
                                </Select>

                                <Button text="{i18n>showSelectedItems}" press=".onShowSelectedItems" class="sapUiSmallMarginBegin"></Button>
                                <Button text="{i18n>deleteSelectedItems}" press=".onDeleteSelectedItems" class="sapUiSmallMarginBegin"></Button>
                                
                                <List
                                id="standardList"
                                    items="{ 
                                    path:'/Products',
                                    sorter:{
                                        path:'Brand',
                                        descending:false,
                                        group:true
                                        },
                                        groupHeaderFactory:'.getGroupHeader'}"
                                    mode="{/typeSelection}"
                                >
                                    <items>
                                        <StandardListItem title="{Material} {Brand} {Model}" description="{Weight}" info="{Price} {Currency}" type="Active" />
                                    </items>
                                </List>
                            </IconTabFilter>
                            <IconTabFilter id="inputList" text="{i18n>inputList}">
                                <List items="{/Products}" mode="Delete" delete="onDeleteRow">
                                    <items>
                                        <InputListItem label="{Brand}">
                                            <Select items="{Properties}">
                                                <core:Item key="{Id}" text="{Text}" />
                                            </Select>
                                        </InputListItem>
                                    </items>
                                </List>
                            </IconTabFilter>
                            <IconTabFilter id="notificationList" text="{i18n>notificationList}">
                                <List items="{/News}">
                                    <items>
                                        <NotificationListItem title="{Title}" description="{Description}" unread="{Unread}" authorName="{Author}" priority="{Priority}" showCloseButton="{ShowCloseButton}" />
                                    </items>
                                </List>
                            </IconTabFilter>
                            <IconTabFilter id="customList" text="{i18n>customList}">
                                <List items="{/News}">
                                    <items>
                                        <CustomListItem>
                                            <layout:Grid defaultSpan="XL3 L3 M6 S12">
                                                <Text text="{Title}" />
                                                <Text text="{Author}" />
                                                <Text text="{Description}" />
                                            </layout:Grid>
                                        </CustomListItem>
                                    </items>
                                </List>
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
            </Page>
        </App>
    </Shell>
</mvc:View>
