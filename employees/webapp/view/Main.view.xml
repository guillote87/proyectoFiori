<mvc:View controllerName="employees.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:f="sap.f" xmlns:core="sap.ui.core" xmlns="sap.m">
    <Page id="page" title="{i18n>title}" showHeader="false">
        <content>
            <f:FlexibleColumnLayout id="fcl" backgroundDesign="Solid" layout="{jsonLayout>/ActiveKey}">
                <f:beginColumnPages>
                    <mvc:XMLView id="masterEmployee" viewName="employees.view.MasterEmployee" />
                </f:beginColumnPages>
                <f:midColumnPages>
                    <mvc:XMLView id="detailEmployeeView" viewName="employees.view.EmployeeDetails" />
                </f:midColumnPages>
                <f:endColumnPages>
                    <Page />
                </f:endColumnPages>
            </f:FlexibleColumnLayout>
        </content>
        <footer>
            <Toolbar>
                <Label text="{i18n>layout}" class="sapUiSmallMargin" />
                <Select items="{jsonLayout>/Layout}" selectedKey="{jsonLayout>/ActiveKey}">
                    <core:Item key="{jsonLayout>Key}" text="{jsonLayout>Text}" />
                </Select>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
