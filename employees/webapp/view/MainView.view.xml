<mvc:View controllerName="employees.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core" xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <HBox>
                <Label id="labelEmployee" text="{i18n>labelEmployee}" labelFor="inputEmployee" class="sapUiSmallMargin" />
                <Input id="inputEmployee" value="{jsonCountries>/EmployeeId}" maxLength="10" width="200px" class="sapUiSmallMarginEnd" />
                <Label id="labelCountry" text="{i18n>labelCountry}" labelFor="slCountry" class="sapUiSmallMargin" visible="true" />
                <Select id="slCountry" selectedKey="{jsonCountries>/CountryKey}" forceSelection="false" items="{jsonCountries>/ListCountry}" visible="true">
                    <items>
                        <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}" />
                    </items>
                </Select>
                <Button id="buttonFilter" text="{i18n>buttonFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd" />
                <Button id="buttonClear" text="{i18n>buttonClear}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarignEnd" />
            </HBox>
            <HBox>
                <Panel>
                    <Button id="btnShowCity" text="{i18n>showCity}" visible="{jsonConfig>/visibleBtnShowCity}" press="onShowCity" />
                    <Button id="btnHideCity" text="{i18n>hideCity}" visible="{jsonConfig>/visibleBtnHideCity}" press="onHideCity" />
                    <Table id="tableEmployee" items="{jsonEmployees>/Employees}">
                        <columns>
                            <Column visible="{jsonConfig>/visibleID}">
                                <header>
                                    <Label text="{i18n>tableId}" />
                                </header>
                            </Column>
                            <Column visible="{jsonConfig>/visibleName}">
                                <Label text="{i18n>tableName}" />
                            </Column>
                            <Column visible="{jsonConfig>/visibleCountry}">
                                <Label text="{i18n>tableCountry}" />
                            </Column>
                            <Column visible="{jsonConfig>/visibleCity}">
                                <Label text="{i18n>tableCity}"  />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem type="Active" press="onShowOrders">
                                <cells>
                                    <Label text="{jsonEmployees>EmployeeID}" />
                                    <Label text="{jsonEmployees>LastName},{jsonEmployees>FirstName}" />
                                    <Label text="{jsonEmployees>Country}" />
                                    <Label text="{jsonEmployees>City}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                    <HBox id="ordersTable"></HBox>
                </Panel>
            </HBox>
        </content>
    </Page>
</mvc:View>
